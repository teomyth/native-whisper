{
	"name": "whispry",
	"version": "0.2.9",
	"description": "Node bindings for OpenAI's Whisper with custom model path support. Fork of nodejs-whisper.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"whispry": "dist/downloadModel.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/teomyth/whispry"
	},
	"scripts": {
		"start": "ts-node src/index.ts",
		"dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
		"example:basic": "ts-node example/basic.ts",
		"example:custom": "ts-node example/custom-model.ts",
		"example": "npm run example:basic",
		"typecheck": "tsc --noEmit",
		"build": "tsc && chmod +x dist/downloadModel.js",
		"format": "prettier --write src/**/*.ts"
	},
	"keywords": [
		"OpenAI",
		"Whisper",
		"CPP",
		"C++",
		"Whisper",
		"Bindings",
		"Transcript",
		"Transcriber",
		"Audio",
		"Speech",
		"Speech-to-Text",
		"Timestamps",
		"nodejs whisper",
		"whisper nodejs",
		"whispry",
		"custom model path",
		"generate timestamps",
		"generate transcript",
		"subtitle",
		"nodejs-whisper",
		"audio-to-subtitles"
	],
	"author": "chetan",
	"license": "MIT",
	"homepage": "https://github.com/teomyth/whispry#readme",
	"bugs": {
		"url": "https://github.com/teomyth/whispry/issues"
	},
	"dependencies": {
		"readline-sync": "^1.4.10",
		"shelljs": "^0.10.0"
	},
	"devDependencies": {
		"@types/node": "^24.0.3",
		"@types/readline-sync": "^1.4.4",
		"@types/shelljs": "^0.8.12",
		"nodemon": "3.1.10",
		"prettier": "^3.0.0",
		"ts-node": "^10.8.2",
		"typescript": "^5.1.6"
	},
	"files": [
		"dist/",
		"cpp/"
	]
}
